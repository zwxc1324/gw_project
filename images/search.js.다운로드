function pf_searchHome(){
	var resultSearchForm = document.getElementById("resultSearchForm");
	if (resultSearchForm.query.value == "") {
		alert("검색어를 입력하세요");
		resultSearchForm.query.focus();
		return;
	}
	var encode= encodeURI (resultSearchForm.query.value);
	
	// adapt for search
	var modeValue;
	$('#resultSearchForm input[type=radio]').each(function(){
		if($(this)[0].checked==true){
			modeValue = $(this).attr('value');
		}
	});
	if(modeValue){
		window.open("http://210.179.205.74/search_site/site/search/index.jsp?mode="+modeValue+"&query=" + encode, "searchWin", 'scrollbars=yes,new,width=1024,height=768,resizable=yes');
		return false;
	}else{
		window.open("http://210.179.205.74/search_site/site/search/index.jsp?mode=commonForm&query=" + encode, "searchWin", 'scrollbars=yes,new,width=1024,height=768,resizable=yes');
		return false;
	}

}